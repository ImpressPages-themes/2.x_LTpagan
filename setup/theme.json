{
    "title": "LT Pagan",
    "version": "2.00",
    "doctype": "HTML5", /* HTML5, XHTML1_STRICT, XHTML1_TRANSITIONAL, XHTML1_FRAMESET, HTML4_STRICT, HTML4_TRANSITIONAL, HTML4_FRAMESET  */
    "thumbnail": "thumbnail.png",
    "author": "ImpressPages",
    "widget": { /* Image cropping settings for widgets. Require theme reinstall to take affect. */
        "image": {
            "width": 540,
            "height": 342,
            "bigWidth": 800, /* Lightbox */
            "bigHeight": 600 /* Lightbox */
        },
        "imageGallery": {
            "width": 160,
            "height": 100,
            "bigWidth": 800, /* Lightbox */
            "bigHeight": 600 /* Lightbox */
        },
        "logoGallery": {
            "width": 160,
            "height": 160
        },
        "textImage": {
            "width": 220,
            "height": 600,
            "bigWidth": 800, /* Lightbox */
            "bigHeight": 600 /* Lightbox */
        }
    },
    "options": [
        {
            "label": "Background Color",
            "name": "backgroundColor",
            "type": "color",
            "default": "#e5e5e5"
        },
        {
            "label": "Main color",
            "name": "mainColor",
            "type": "color",
            "default": "#000000"
        },
        {
            "label": "Drop-down menu",
            "name": "dropdownMenu",
            "type": "check"
        },
        {
            "label": "Homepage content blocks",
            "name": "homeContentBlocks",
            "type": "select",
            "default": 2,
            "values": [0, 2, 3, 4]
        }
    ]

}